  <technique priority="50" lights="1">
          <pass>
            <mixmode><srcalphaadd /></mixmode>
            <buffer source="texture coordinate 0" destination="texture coordinate 0" />

            <vproc plugin="vproc_std">
              <vproc_std>
                <skinned_position buffer="generic 0" />
                <skinned_normal buffer="generic 1" />
              </vproc_std>
	    </vproc>
            <buffer source="generic 0" destination="position" />
            <buffer source="generic 1" destination="normal" />
            <vp plugin="glcg" file="/shader/vertexlight.cgvp" />
            <texture destination="unit 0" name="tex diffuse" />
            <fp plugin="glfixed">
              <fixedfp>
                <layer>
                  <colorsource num="0" source="primary color" modifier="color" />
                  <colorsource num="1" source="texture" modifier="color" />
                  <coloroperation operation="modulate" />
                </layer>
              </fixedfp>
            </fp>
          </pass>
  </technique>

