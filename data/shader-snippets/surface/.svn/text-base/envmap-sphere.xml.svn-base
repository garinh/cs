<snippet>
  <technique priority="100">
    <combiner name="cg" plugin="crystalspace.graphics3d.shader.combiner.glcg" />
    
    <input name="dir" type="direction" />
    
    <input name="texReflect" type="tex2d" default="complex">
      <block location="pass">
	<texture name="tex reflection" destination="fragmentIn.texReflect" />
      </block>
      
      <block location="cg:fragmentIn">
	<uniform type="tex2d" name="texReflect" />
      </block>
      
      <block location="cg:fragmentMain">
	texReflect = fragmentIn.texReflect;
      </block>
    </input>
    
    <block location="cg:definitions">
      <?Include /shader-snippets/surface/spheremap.cginc?>
    </block>
    
    <block location="cg:fragmentMain">
      envColor = tex2D (texReflect, spheremap (dir));
    </block>
    
    <output name="envColor" type="rgba" />
  </technique>
</snippet>
