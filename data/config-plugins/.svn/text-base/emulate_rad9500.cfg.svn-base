; Configuration settings to emulate the feature set of Radeon9500-level hardware.
; Use like:
;   myapp -cfgfile=/config/emulate_rad9500.cfg

; References: 
;  http://delphi3d.net/hardware/viewreport.php?report=1584

; Cap Cg program levels
Video.OpenGL.Shader.Cg.Fake.Vertex.Profile = arbvp1
Video.OpenGL.Shader.Cg.Fake.Vertex.MaxAddressRegs = 1
Video.OpenGL.Shader.Cg.Fake.Vertex.MaxLocalParams = 256
Video.OpenGL.Shader.Cg.Fake.Vertex.MaxInstructions = 128
Video.OpenGL.Shader.Cg.Fake.Vertex.NumTemps = 12
Video.OpenGL.Shader.Cg.Fake.Fragment.Profile = arbfp1
Video.OpenGL.Shader.Cg.Fake.Fragment.MaxLocalParams = 32
Video.OpenGL.Shader.Cg.Fake.Fragment.MaxTexIndirections = 4
Video.OpenGL.Shader.Cg.Fake.Fragment.NumInstructionSlots = 96
Video.OpenGL.Shader.Cg.Fake.Fragment.NumMathInstructionSlots = 64
Video.OpenGL.Shader.Cg.Fake.Fragment.NumTemps = 32
Video.OpenGL.Shader.Cg.Fake.Fragment.NumTexInstructionSlots = 32
;Video.OpenGL.Shader.Cg.CompilerOptions.Fragment=NoDependentReadLimit=0

; Extensions not supported by that HW

; Multitexturing limits
Video.OpenGL.Shader.Fixed.MaxTextureUnits = 8
