; Configuration settings to emulate the feature set of GeForce6/7-level hardware.
; Use like:
;   myapp -cfgfile=/config/emulate_gf6.cfg

; References: 
;  http://delphi3d.net/hardware/viewreport.php?report=1613

; Cap Cg program levels
Video.OpenGL.Shader.Cg.Fake.Vertex.Profile = vp40
Video.OpenGL.Shader.Cg.Fake.Vertex.MaxAddressRegs = 2
Video.OpenGL.Shader.Cg.Fake.Vertex.MaxLocalParams = 256
Video.OpenGL.Shader.Cg.Fake.Vertex.MaxInstructions = 512
Video.OpenGL.Shader.Cg.Fake.Vertex.NumTemps = 48
Video.OpenGL.Shader.Cg.Fake.Fragment.Profile = fp40
Video.OpenGL.Shader.Cg.Fake.Fragment.MaxLocalParams = 512
Video.OpenGL.Shader.Cg.Fake.Fragment.NumInstructionSlots = 4096
Video.OpenGL.Shader.Cg.Fake.Fragment.NumTemps = 32


; Extensions not supported by that HW or driver

; Multitexturing limits
Video.OpenGL.Shader.Fixed.MaxTextureUnits = 4
