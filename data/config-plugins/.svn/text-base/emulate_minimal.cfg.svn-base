; Configuration settings to emulate HW with the minimally supported VP/FP level
; Use like:
;   myapp -cfgfile=/config/emulate_minimal.cfg

; Cap Cg program levels
; Minimal limits as dictated by ARB_v_p spec
Video.OpenGL.Shader.Cg.Fake.Vertex.Profile = arbvp1
Video.OpenGL.Shader.Cg.Fake.Vertex.MaxAddressRegs = 1
Video.OpenGL.Shader.Cg.Fake.Vertex.MaxInstructions = 128
Video.OpenGL.Shader.Cg.Fake.Vertex.MaxLocalParams = 96
Video.OpenGL.Shader.Cg.Fake.Vertex.NumTemps = 12
; Minimal limits as dictated by ARB_f_p spec
Video.OpenGL.Shader.Cg.Fake.Fragment.Profile = arbfp1
Video.OpenGL.Shader.Cg.Fake.Fragment.MaxLocalParams = 24
Video.OpenGL.Shader.Cg.Fake.Fragment.MaxTexIndirections = 4
Video.OpenGL.Shader.Cg.Fake.Fragment.NumInstructionSlots = 72
Video.OpenGL.Shader.Cg.Fake.Fragment.NumMathInstructionSlots = 48
Video.OpenGL.Shader.Cg.Fake.Fragment.NumTemps = 16
Video.OpenGL.Shader.Cg.Fake.Fragment.NumTexInstructionSlots = 24
